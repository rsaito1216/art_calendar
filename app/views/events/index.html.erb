<p id="notice"><%= notice %></p>

<h1>本日から２週間先まで予約可能です</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>カット開始時間</th>
      <th>カット終了時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.body %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= link_to '予約表示', event %></td>
        <td><%= link_to '予約変更', edit_event_path(event) %></td>
        <td><%= link_to '予約取り消し', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

