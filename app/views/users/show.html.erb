<div class="contents row">
  <p><font size="4" color="red"><%= @nickname %>さんの予約一覧</font></p>
  
  <table>
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>カット開始時間</th>
      <th>カット終了時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= link_to '予約変更', edit_event_path(event) %></td>
        <td><%= link_to '予約取り消し', event, method: :delete, data: { confirm: '予約を取り消すと元に戻せません。本当に取り消しますか？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>